<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Поети - Аркуші</title>
    <link href="/css/style.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
</head>
<body class="bg-white">

    <!-- Header -->
    <header class="bg-white border-b border-stone-200">
        <div class="container mx-auto px-4">
            <div class="flex justify-between items-center py-4">
                <div class="flex items-center gap-14">
                    <a href="/">
                        <img src="/icons/Logo.svg" alt="Аркуші" class="h-8">
                    </a>
                    <nav class="hidden md:flex items-center gap-8">
                        <a href="/poets" class="text-zinc-900 font-medium">Вірші та поети</a>
                        <a href="#" class="text-zinc-900 font-medium">Колекції</a>
                        <a href="#" class="text-zinc-900 font-medium">Про нас</a>
                    </nav>
                </div>
                <div class="hidden md:flex items-center gap-8">
                    <a href="#">
                        <img src="/icons/Icon=Telegram, State=Default.svg" alt="Telegram" class="h-4">
                    </a>
                    <a href="#">
                        <img src="/icons/Icon=Instagram, State=Default.svg" alt="Instagram" class="h-4">
                    </a>
                    <a href="#" class="text-zinc-900 font-medium">Зареєструватись</a>
                    <a href="#" class="text-red-600 font-medium border border-stone-200 rounded-md px-4 py-2 hover:bg-red-50">Задонатити на проєкт</a>
                </div>
            </div>
        </div>
    </header>

    <!-- Breadcrumbs -->
    <div class="bg-stone-50">
        <div class="container mx-auto px-4 py-5">
            <div class="flex items-center text-sm text-stone-500 font-medium">
                <a href="/" class="hover:text-stone-700">Домашня</a>
                <img src="/icons/Icon=Chevron-right, State=Default.svg" class="h-4 w-4 mx-1">
                <span>Поети</span>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-10">
        <h1 class="text-4xl font-bold text-zinc-900 mb-10">Поети</h1>
        <div id="poets-grid" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
            <!-- Poet cards will be inserted here by JavaScript -->
        </div>
    </main>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            fetch('/api/poets')
                .then(response => response.json())
                .then(poets => {
                    const grid = document.getElementById('poets-grid');
                    if (!grid) return;

                    poets.forEach(poet => {
                        const card = document.createElement('div');
                        card.className = 'flex flex-col items-center text-center';
                        card.innerHTML = `
                            <a href="/poets/${poet.slug}" class="block">
                                <img src="${poet.imageUrl}" alt="${poet.firstName} ${poet.lastName}" class="w-40 h-40 rounded-full object-cover mb-4">
                                <h2 class="text-xl font-bold text-zinc-900">${poet.firstName} ${poet.lastName}</h2>
                                <p class="text-stone-500">${poet.birthYear} - ${poet.deathYear || 'сьогодення'}</p>
                            </a>
                        `;
                        grid.appendChild(card);
                    });
                });
        });
    </script>

</body>
</html> 